@model IQueryable<Models.Products>
@{Layout = null;}
<ul>
    @foreach (var item in Model as IQueryable<Models.Products>)
    { <li><a href="@Url.Action("Details", "Products", new { Id = item.Id })" target="_blank" class="item"> 
                    <img src="@(new BLL.GalleryBLL().GetFirstPicture(item.Id))" alt="" /></a> @Html.ActionLink(item.Name, "Details", "Products", new { Id = item.Id }, null)
                    <span><b class="price">@String.Format("{0:C}", item.SalePrice)</b> <b class="price_old">@String.Format("{0:C}", item.MarketPrice)</b></span>
                    <span>@item.Description.removeHtml().CutString(16)</span> </li>
    }
</ul>
