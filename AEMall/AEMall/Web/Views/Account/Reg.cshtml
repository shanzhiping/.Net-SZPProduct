@model Models.RegModel
@{
    ViewBag.Title = "新用户注册";
    ViewBag.CssSelf = @Url.Content("~/Content/themes/shine/ui.shine.reg.css");
    ViewBag.JsSelf = @Url.Content("~/Scripts/jquery.start.reg.js");
}
@{Html.EnableUnobtrusiveJavaScript(true);}
<div id="location">
    @Html.ActionLink("首页", "Index", "Index")@Html.ActionLink("用户注册", "Reg", "Account", null, new { @class = "child" })
</div>
<div id="main">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <table cellpadding="2px">
         <tr>
                <th>
                    @Html.LabelFor(model => model.Email)
                </th>
                <td>
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.LabelFor(model => model.Name)
                </th>
                <td>
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.LabelFor(model => model.Password)
                </th>
                <td>
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </td>
            </tr>
             <tr>
                <th>
                    @Html.LabelFor(model => model.ConfirmPassword)
                </th>
                <td>
                     @Html.EditorFor(model => model.ConfirmPassword)
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.LabelFor(model => model.AuthCode)
                </th>
                <td>
                    @Html.TextBoxFor(model => model.AuthCode, new { @class = "authcode",@title="验证码不区分大小写" })
                    <img alt="验证码图片" id="ImgValidateCode" title="看不清？点击换一个" src="@Url.Action("SecurityCode")"  onclick="this.src=this.src+'?'" />
                    @Html.ValidationMessageFor(model => model.AuthCode)
                </td>
            </tr>
            <tr>
                <th colspan="2">
                    <input type="submit" value="" id="login_submit" class="sub_static" />
                </th>
            </tr>
        </table>
    }
</div>
