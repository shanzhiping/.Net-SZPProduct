<style type="text/css">
    #main_wrapper
    {
        margin: 0px auto;
        padding: 0px;
        width: 99%;
    }
    fieldset
    {
        height: 510px;
        width: 96%;
    }
    legend
    {
        background: url(Content/misc/admin/images/bg-desktop-legend.jpg) no-repeat;
        width: 200px;
        height: 36px;
        display: block;
        text-indent: -9999px;
    }
    #nav_wrapper
    {
        position: relative;
        margin: 0px auto;
        top: 230px;
        width: 0px;
        height: 0px;
        background: url(Content/misc/admin/images/bg-desktop.jpg) center center no-repeat;
    }
    #nav_wrapper a.nav_items
    {
        position: absolute;
        display: block;
        width: 67px;
        height: 67px;
        background: url(Content/misc/admin/images/bg-desktop-buttons.jpg) no-repeat;
        cursor: pointer;
        text-indent: -9999px;
    }
    #nav_wrapper a.nav_items:hover
    {
        position: absolute;
        display: block;
        width: 67px;
        height: 67px;
        background: url(Content/misc/admin/images/bg-desktop-buttons-active.jpg) no-repeat;
        cursor: pointer;
        text-indent: -9999px;
    }
    #nav_wrapper #nav_1
    {
        left: 50px;
        top: 50px;
        background-position: 0px 0px;
    }
    #nav_wrapper #nav_2
    {
        left: 196px;
        top: 0px;
        background-position: -67px 0px;
    }
    #nav_wrapper #nav_3
    {
        right: 50px;
        top: 50px;
        background-position: -134px 0px;
    }
    #nav_wrapper #nav_4
    {
        right: 0px;
        top: 196px;
        background-position: -201px 0px;
    }
    #nav_wrapper #nav_5
    {
        left: 0px;
        top: 196px;
        background-position: -268px 0px;
    }
    #nav_wrapper #nav_6
    {
        right: 50px;
        bottom: 50px;
        background-position: -335px 0px;
    }
    #nav_wrapper #nav_7
    {
        left: 50px;
        bottom: 50px;
        background-position: -402px 0px;
    }
    #nav_wrapper #nav_8
    {
        left: 196px;
        bottom: 0px;
        background-position: -469px 0px;
    }
</style>
<script type="text/javascript">
    $(function () {
        $("#nav_wrapper").css({
            width: "0px",
            height: "0px",
            top: "230px",
            opacity: 0
        }).animate(
            {
                width: "460px",
                height: "460px",
                top: "0px",
                opacity: 1
            }, 1000, "linear");
    });
</script>
<div id="main_wrapper">
    <fieldset>
        <legend>快捷操作面板</legend>
        <div id="nav_wrapper">
            @Ajax.ActionLink("大学管理", "Index", "Universities", null, new AjaxOptions() { UpdateTargetId = "Main" }, new { @class = "nav_items", @id = "nav_5" })
            @Ajax.ActionLink("系统密码", "Password", "Home", null, new AjaxOptions() { UpdateTargetId = "Main" }, new { @class = "nav_items", @id = "nav_8" })
            @Ajax.ActionLink("我的会员", "Index", "Members", null, new AjaxOptions() { UpdateTargetId = "Main" }, new { @class = "nav_items", @id = "nav_1" })
            @Ajax.ActionLink("我的反馈", "Index", "FAQs", null, new AjaxOptions() { UpdateTargetId = "Main" }, new { @class = "nav_items", @id = "nav_2" })
            @Ajax.ActionLink("我的宾馆", "Index", "Hotels", null, new AjaxOptions() { UpdateTargetId = "Main" }, new { @class = "nav_items", @id = "nav_3" })
            @Ajax.ActionLink("我的文档", "Index", "Articles", null, new AjaxOptions() { UpdateTargetId = "Main" }, new { @class = "nav_items", @id = "nav_4" })
            @Ajax.ActionLink("考点管理", "Index", "Benches", null, new AjaxOptions() { UpdateTargetId = "Main" }, new { @class = "nav_items", @id = "nav_6" })
            @Ajax.ActionLink("系统日志", "Index", "Logs", null, new AjaxOptions() { UpdateTargetId = "Main" }, new { @class = "nav_items", @id = "nav_7" })
        </div>
    </fieldset>
</div>
